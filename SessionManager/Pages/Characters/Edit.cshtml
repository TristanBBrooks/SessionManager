@page "{id}"
@using SessionManager.Pages.Characters

@model EditModel

<h1 align="center">Edit @Model.Character.Name</h1>

<form method="post" class="form-horizontal">
    <input type="hidden" asp-for="Character.Id" />
    <div class="form-group">
        <label class="col-xs-2 control-label" asp-for="Character.Name"></label>
        <div class="col-xs-10">
            <input class="form-control" asp-for="Character.Name" />
            <span asp-validation-for="Character.Name"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2 control-label" asp-for="Character.Alignment"></label>
        <div class="col-xs-10">
            <select class="form-control" asp-for="Character.Alignment"
                    asp-items="@(new SelectList(Model.Alignments, "Id", "Name"))"></select>
            <span asp-validation-for="Character.Alignment"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2 control-label" asp-for="Character.Subrace"></label>
        <div class="col-xs-10">
            <select class="form-control" asp-for="Character.Subrace"
                    asp-items="@(new SelectList(Model.Subraces, "Id", "Name"))"></select>
            <span asp-validation-for="Character.Subrace"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2 control-label" asp-for="Character.Level"></label>
        <div class="col-xs-10">
            <input class="form-control" asp-for="Character.Level" />
            <span asp-validation-for="Character.Level"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="col-xs-2 control-label" asp-for="Character.Experience"></label>
        <div class="col-xs-10">
            <input class="form-control" asp-for="Character.Experience" />
            <span asp-validation-for="Character.Experience"></span>
        </div>
    </div>
    <br />
    <div align="center">
        <input class="btn btn-default" type="submit" name="save" value="Save" />
    </div>
</form>