@model CharacterInputModel

@{
    ViewBag.Title = "Create";
}

<h1 align="center">Create</h1>

<form class="form-horizontal" method="post">

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Alignment"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="Alignment"
                    asp-items="@(new SelectList(Model.Alignments, "Id", "Name"))"></select>
            <span asp-validation-for="Alignment"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Subrace"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="Subrace"
                    asp-items="@(new SelectList(Model.Subraces, "Id", "Name"))"></select>
            <span asp-validation-for="Subrace"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Level"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Level" />
            <span asp-validation-for="Level"></span>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Experience"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Experience" />
            <span asp-validation-for="Experience"></span>
        </div>
    </div>
    <br />
    <div align="center">
        <input class="btn btn-default" type="submit" name="save" value="Save" />
    </div>
</form>