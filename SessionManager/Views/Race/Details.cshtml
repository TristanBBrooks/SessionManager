@model Race

@{
    ViewBag.Title = Model.Name;
}

<div class="col-xs-10 col-xs-offset-1" align="center">
    <h1>@Model.Name</h1>
    <div class="row">
        <div class="col-xs-2" align="right" style="border-right: 2px solid grey;">
            <div>
                <b>Subraces</b>
            </div>
            <br />
        </div>
        <div class="col-xs-10" align="left" style="background-color: whitesmoke; border-radius: 15px 30px 30px 5px;">
            <div>
                @{ 
                    foreach (var subrace in Model.Subraces)
                    {
                        <div>@subrace.Name</div>
                    }
                }
            </div>
        </div>
    </div>
    <br />
    <a class="btn btn-default" asp-action="Index" asp-controller="Race">Races</a>
</div>

